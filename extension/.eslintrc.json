{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true,
        "webextensions": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
    },
    "overrides": [
        {
            "files": ["*.ts", "*.tsx"],
            "plugins": ["@typescript-eslint"],
            "extends": ["airbnb-typescript/base"],
            "parser": "@typescript-eslint/parser",
            "parserOptions": {
                "project": ["./tsconfig.json"]
            }
        }
    ]
}
