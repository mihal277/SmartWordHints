{
  "manifest_version": 3,
  "name": "SmartWordHints",
  "version": "0.0.1",

  "description": "Adds hints for hard words found on a given website. Uses the API at https://smartwordhints.com/api",
  "icons": {
    "48": "icons/quicknote-48.png"
  },

  "permissions": [
    "storage",
    "activeTab"
  ],

  "host_permissions": [
    "https://smartwordhints.com/",
    "http://localhost/",
    "http://*/",
    "https://*/"
  ],

  "action": {
    "default_icon": {
     "32" : "icons/quicknote-32.png"
    },
    "default_title": "SmartWordHints"
  },

  "options_ui": {
    "page": "options.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/main.js"],
      "css": ["overlay.css"],
      "run_at": "document_idle"
    }
  ],

  "background": {
    "service_worker": "scripts/background.js"
  },

  "web_accessible_resources": [
    {
      "resources": ["overlay.html"],
      "matches": ["<all_urls>"]
    }
  ],

  "homepage_url": "https://github.com/mihal277/SmartWordHints"
}
